<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fasanol.outerspacemanager.MainActivity">

    <Button
        android:text="Galaxie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ga"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textAlignment="center"
        android:padding="13dp"
        android:layout_marginBottom="33dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textSize="28sp"
        android:layout_alignBottom="@+id/username"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mineral"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/gas"
        android:layout_alignLeft="@+id/gas"
        android:layout_alignStart="@+id/gas" />

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textSize="28sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/signOut"
        android:layout_toEndOf="@+id/signOut" />

    <Button
        android:layout_height="@dimen/off_icon"
        android:id="@+id/signOut"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:background="@android:drawable/ic_lock_power_off"
        android:layout_width="@dimen/off_icon"
        android:layout_above="@+id/gas"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Chantier spatial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cs"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textAlignment="center"
        android:padding="13dp"
        android:layout_marginBottom="32dp"
        android:layout_above="@+id/ga"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Recherches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/re"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textAlignment="center"
        android:padding="13dp"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/cs"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Flottes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fl"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textAlignment="center"
        android:padding="13dp"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/re"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="BÃ¢timents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ba"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textAlignment="center"
        android:padding="13dp"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/fl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Gaz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gas"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/username"
        android:layout_toRightOf="@+id/signOut"
        android:layout_toEndOf="@+id/signOut" />

</RelativeLayout>
